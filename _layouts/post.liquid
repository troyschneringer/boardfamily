---
layout: default
---
<header>
  <h1 class="mb1 mt3 fw6">{{page.title}}</h1>
</header>
<!-- Quick Look -->
<div class="flex-row-reverse-ns ba bw1 br2 b--purple i">
  <div class="flex-row flex-column-ns justify-around w5-ns items-stretch bl-ns b--purple pa2 dark-gray">
    <div class="flex-row mb1">
      <span class="w2-ns mr1 mr0-ns"><i class="fas fa-users"></i></span>
      <span>{{page.stats.players}}</span>
    </div>
    <div class="flex-row mb1">
      <span class="w2-ns mr1 mr0-ns"><i class="fas fa-child"></i></span>
      <span>{{page.stats.age}}</span>
    </div>
    <div class="flex-row mb1">
      <span class="w2-ns mr1 mr0-ns"><i class="fas fa-clock"></i></span>
      <span>{{page.stats.duration}}</span>
    </div>
  </div>
  <div class="flex-auto pa2">{{page.description}}</div>
</div>
<!-- /Quick Look -->
{{content}}